<UserControl x:Class="WpfApp4.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Background="White" Height="25">
        <TextBox Height="25" Width="60" Margin="-340 0 0 0" Foreground="Gray" Padding="20 4 0 0" x:Name="time" 
                 FontSize="10" BorderBrush="Transparent">X/XX</TextBox>
        <TextBox Height="25" Width="250" Margin="-30 0 0 0 " Padding="4 4 0 0" x:Name="things" BorderBrush="Transparent">新的項目</TextBox>
        <TextBox Height="25" Width="90" Margin="0 0 -310 0" Padding="4 4 0 0" Foreground="DodgerBlue" x:Name="money" BorderBrush="Transparent" TextChanged="money_TextChanged">0</TextBox>
    </Grid>
</UserControl>
